/* 轮播图 */
.swiper-container {
  position: relative;
  width: 100%;
}
.dots {
  display: flex;
  justify-content: center;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
}
.dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
}
.dots .dot.active {
  width: 150rpx;
  background: #fff;
}
.banner-btn-img {
  border-radius: 0;
  width: 100%;
  height: 100%;
}
swiper {
  width: 750rpx;
}
.slide-image {
  height: 100%;
  width: 100%;
}
