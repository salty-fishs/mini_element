.container {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 104;
  background: rgba(0, 0, 0, 0.3) !important;
  border-radius: 0;
  display: flex;
}

.content {
  width: 750rpx;
  height: 600rpx;
  background: #fff;
  position: absolute;
  border-radius: 10rpx 10rpx 0 0;
}

.animation-start {
  bottom: 0;
  animation: start 1s;
}
@keyframes start {
  0% {
    bottom: -600rpx;
  }
  100% {
    bottom: 0rpx;
  }
}
.animation-guan{
  bottom: -600rpx;
  animation: guan 1s;
}
@keyframes guan {
  0% {
    bottom: 0rpx;
  }
  100% {
    bottom: -600rpx;
  }
}