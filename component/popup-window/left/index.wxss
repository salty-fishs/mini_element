.container {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 104;
  background: rgba(0, 0, 0, 0.3) !important;
  border-radius: 0;
  display: flex;
}

.content {
  width: 446rpx;
  height: 100%;
  background: #fff;
  position: absolute;
  border-radius: 10rpx 10rpx 0 0;
}

.animation-start {
  left: 0;
  animation: start 1s;
}

@keyframes start {
  0% {
    left: -446rpx;
  }

  100% {
    left: 0rpx;
  }
}

.animation-guan {
  left: -446rpx;
  animation: guan 1s;
}

@keyframes guan {
  0% {
    left: 0rpx;
  }

  100% {
    left: -446rpx;
  }
}
